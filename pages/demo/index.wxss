.center {
    text-align: center;
    padding-top:20px;
    font-size:2em;
}
scroll-view{
    margin-top:20px;
}
.footer{
    position:absolute;
    bottom:0;
    width:100%;
    display:flex;
    flex-direction: row;
    justify-content: space-around;
}
.footer view{
    width:33.3%;
    padding:5px 0;
    text-align: center;
    border-right:1px solid gray;
    background-color:#529;
    color:white;
}
.footer view:hover{
    background-color:#f66;
}
