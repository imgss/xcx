/* pages/demo/index.wxss */
.center {
    text-align: center;
    padding-top:20px;
    font-size:2em;
}
scroll-view{
    margin-top:20px;
}
.footer{
    position:absolute;
    bottom:0;
    width:100%;
    display:flex;
    flex-direction: row;
    justify-content: space-around;
}
.footer view{
    width:33.3%;
    padding:5px 0;
    text-align: center;
    border-right:1px solid gray;
    background-color:#529;
    color:white;
}
.footer view:hover{
    background-color:#f66;
}
.wanted{
    color:#222;
    border-bottom:#666 1px solid;
    border-radius:10rpx;
    padding:20rpx 20rpx;
    background-color: #ddd;
    margin:20rpx;
}
.f66{
    background-color:#f66;
}
.date{
    float:right;
    margin-right:3px;
    font-size:12px;
}
.job{
    font-size:20px;

}
